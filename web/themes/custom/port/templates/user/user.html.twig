{% set has_addres = (user.field_address.value == []) ? FALSE : TRUE %}
{% set has_phone = (user.field_phone_number.value == []) ? FALSE : TRUE %}
{% set has_photo = (user.user_picture.value == []) ? FALSE : TRUE %}
{% set has_summary = (user.field_description.summary == null) ? FALSE : TRUE %}
{% set has_description = (user.field_description.value == []) ? FALSE : TRUE %}
{% set has_resumen = (user.field_resume.value == []) ? FALSE : TRUE %}
{% set has_testimonials = (user.field_testimonial_three_items.value == []) ? FALSE : TRUE %}
{% set has_job = user_has_job_content %}
{% set has_project = user_has_project_content %}
{% set has_education = user_has_education_content %}

{% include '@molecules/card-console/card-console.twig' with {
    card_console__username: user.label,
    card_console__has_phone: has_phone,
    card_console__has_addres: has_addres,
    card_console__has_photo: has_photo,
    card_console__has_summary: has_summary,
    card_console__has_description: has_description,
    card_console__has_resumen: has_resumen,
    card_console__has_testimonials: has_testimonials,
    card_console__has_job: has_job,
    card_console__has_project: has_project,
    card_console__has_education: has_education,
    card_console__endpoint: endpoint,
} %}
